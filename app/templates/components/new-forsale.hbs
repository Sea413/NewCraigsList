{{#if addNewListing}}
  <div>
    <form>
      <div class="form-group">
        <label for="user">Contact Name</label>
        {{input value=user id="user"}}
      </div>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title"}}
      </div>
      <div class="form-group">
        <div>
          <label for="body">Body</label>
        </div>
        {{textarea class="big" value=body id="body"}}
      </div>
      <div class="form-group">
        <label for="location">Location</label>
        {{input value=location id="location"}}
      </div>
      <div class="form-group">
        <label for="price">Price</label>
        {{input value=price id="price"}}
      </div>
      <div class="form-group">
        <label for="condition">Condition</label>
        {{input value=condition id="condition"}}
      </div>
      <button {{action 'saveListing'}}>Save</button>
      <button {{action 'hideForm'}}>Cancel</button>
    </form>
  </div>
{{else}}
  <button {{action 'newListingForm'}}>New Listing</button>
{{/if}}
