{{#if addNewListing}}
  <div>
    <form>
      <div class="form-group">
        <label for="user">Contact Name</label>
        {{input value=user id="user"}}
      </div>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title"}}
      </div>
      <div class="form-group">
        <div>
          <label for="body">Body</label>
        </div>
        {{textarea class="big" value=body id="body"}}
      </div>
      <div class="form-group">
        <label for="location">Location</label>
        {{input value=location id="location"}}
      </div>
      <div class="form-group">
        <label for="industry">Industry</label>
        {{input value=industry id="industry"}}
      </div>
      <div class="form-group">
        <label for="position">Position</label>
        {{input value=position id="position"}}
      </div>
      <div class="form-group">
        <label for="salary">Salary</label>
        {{input value=salary id="salary"}}
      </div>
      <div class="form-group">
        <label for="hours">Hours</label>
        {{input value=hours id="hours"}}
      </div>

      <button {{action 'saveListing'}}>Save</button>
      <button {{action 'hideForm'}}>Cancel</button>
    </form>
  </div>
{{else}}
  <button {{action 'newListingForm'}}>New Listing</button>
{{/if}}
